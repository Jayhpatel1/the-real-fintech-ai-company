rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can upload and read their own profile images
    match /users/{userId}/profile/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Property images - readable by all authenticated users, writable by property owners
    match /properties/{propertyId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         get(/databases/(default)/documents/users/$(request.auth.uid)).data.userType in ['broker', 'builder', 'admin']);
    }
    
    // Product images - readable by all, writable by shop owners
    match /products/{productId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.userType in ['shop_owner', 'admin'];
    }
    
    // Service provider images and documents
    match /services/{serviceId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.userType in ['service_provider', 'admin'];
    }
    
    // Chat images and files
    match /chats/{chatId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        (get(/databases/(default)/documents/chats/$(chatId)).data.participants[request.auth.uid] != null);
    }
    
    // Admin uploads
    match /admin/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.userType == 'admin';
    }
  }
}